<%= content_tag(:h1, class: "text-center") do %>
    <%= "#{display_name(@user)}'s Profile Page" %>
<% end %>

<ul>
    <% @projects.each do |p| %>
        <li><%= link_to p.name, project_path(p) %></li>
    <% end %>
</ul>


<div class='d-flex justify-content-end mb-3'>
    <%= link_to "Edit", edit_user_path(@user), class: ["btn", "btn-outline-success", "me-2"] %>
    <%= link_to "Delete", project_path(@user), method: :delete, class: ["btn", "btn-outline-danger", "float-end"] %>
</div>