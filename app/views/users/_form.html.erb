<%= form_for(@user) do |f| %> 
    <%= content_tag(:div, class: "row g-3 text-dark") do %>
        <%= content_tag(:div, nil, class: "col-md-3") %>
        <%= content_tag(:div, class: %w(form-floating mb-3 col-md-3)) do %>
            <%= f.text_field :first_name, class: "form-control", placeholder: "Michael" %>
            <%= f.label :first_name %>
        <% end %>
        <%= content_tag(:div, class: %w(form-floating mb-3 col-md-3)) do %>
            <%= f.text_field :last_name, class: "form-control", placeholder: "Scott" %>
            <%= f.label :last_name %>
        <% end %>

        <%= content_tag(:div, nil, class: "col-md-3") %>
        <%= content_tag(:div, nil, class: "col-md-3") %>
        <%= content_tag(:div, class: %w(form-floating mb-3 col-md-6)) do %>
            <%= f.email_field :email, class: "form-control", placeholder: "Michael@DunderMifflin.com", require: true %>
            <%= f.label :email %>
        <% end %>
        <%= content_tag(:div, nil, class: "col-md-3") %>
        <%= content_tag(:div, nil, class: "col-md-3") %>
        <%= content_tag(:div, class: %w(form-floating mb-3 col-md-6)) do %>
            <%= f.password_field :password, class: "form-control", placeholder: "WorldsBestBoss" %>
            <%= f.label :password %>
        <% end %>
        <%= content_tag(:div, nil, class: "col-md-3") %>
        <%= render partial: "form_2", locals: {f: f} %>

        <%= content_tag(:div, nil, class: "col-md-3") %>
        <%= content_tag(:div, nil, class: "col-md-3") %>
        <%= content_tag(:div, nil, class: "col-md-6") do %>
            <%= f.submit(submit_text, class: "form-control btn btn-primary") %>
        <% end %>
    <% end %>
<% end %>
