<div class="modal fade" id="commenters" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Comments from</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <ul class="list-group">
            <% project.commenters.each do |user| %>
                <li class="list-group-item">
                    <%= display_avatar(user) %>
                    <%= link_to display_name(user), user_path(user), class: "text-reset text-decoration-none" %>
                </li>
            <% end  %>
        </ul>
      </div>
    </div>
  </div>
</div>