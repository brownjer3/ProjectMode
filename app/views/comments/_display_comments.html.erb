<% project.comments.each do |comment| %>
    <li class='py-2'>
        <strong><%= link_to display_name(comment.commenter), user_path(comment.commenter), class: "text-reset text-decoration-none me-2" %></strong>
        <%= content_tag(:small, comment.content, class: "text-white") %>
    </li>
<% end %>