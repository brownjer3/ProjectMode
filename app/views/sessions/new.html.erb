<%= content_tag(:h1, "Login", class: "text-center") %>
    <%= form_tag("/login", method: :post) do %>
        <%= content_tag(:div, class: ["row", "g-3"]) do %>
            <%= content_tag(:div, nil, class: "col-md-4") %>
            <%= content_tag(:div, class: "col-md-4") do %>
                <%= label_tag :email %>
                <%= email_field_tag :email %>
            <% end %>
            <%= content_tag(:div, nil, class: "col-md-4") %>
            <%= content_tag(:div, nil, class: "col-md-4") %>
            <%= content_tag(:div, class: "col-md-4") do %>
                <%= label_tag :password %>
                <%= password_field_tag :password, nil %>
            <% end %>
            <%= content_tag(:div, nil, class: "col-md-4") %>
            <%= content_tag(:div, nil, class: "col-md-4") %>
            <%= content_tag(:div, class: "col-md-4") do %>
                <%= submit_tag "Login", class: "btn btn-primary col-md-12" %>
            <% end %>
            <%= content_tag(:div, nil, class: "col-md-4") %>
        <% end %>
    <% end %>
    <br/>
    <%= content_tag(:div, class: "text-center") do %>
        <%= link_to 'Login with Canvas (TBD)', '/auth/canvas' %>
        <%= content_tag(:p, "New here? Sign up") %>
    <% end %>