<div class="container">
    <%= content_tag(:h1, "Login", class: "text-center") %>
    <%= content_tag(:p, class: "text-center") do %>
        <small>New here? <%= link_to "Sign Up", '/signup' %></small>
    <% end %>
    <br>
        <div class="d-grid gap-2 col-4 mx-auto">
        <%= button_tag type: "button", class: %w(btn border border-primary) do %>
            <%= image_tag 'google-icon.svg', height: '20', width: '20' %>
            <%= link_to "Continue with Google", '/auth/google_oauth2', method: :post, class: "text-decoration-none" %>
        <%  end %>
        <button class="btn btn-primary" type="button">Future option (TBD)</button>
    </div>

<hr class="mx-auto col-6">
<%= render "form" %>


</div>